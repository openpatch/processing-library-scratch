{
  "java.project.sourcePaths": ["src"],
  "java.project.referencedLibraries": ["libs/*.jar"],
  "hyperbook.root": "docs",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-11",
      "path": "/usr/lib/jvm/jre-11-openjdk",
      "default": true
    },
    {
      "name": "JavaSE-17",
      "path": "/usr/lib/jvm/jre-17-openjdk"
    },
    {
      "name": "JavaSE-19",
      "path": "/usr/lib/jvm/jre-19-openjdk"
    }
  ],
  "java.saveActions.organizeImports": true,
  "java.sources.organizeImports.starThreshold": 1,
  "java.sources.organizeImports.staticStarThreshold": 1,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "java.cleanup.actionsOnSave": [
    "addFinalModifier",
    "invertEquals",
    "qualifyMembers",
    "switchExpression",
    "instanceofPatternMatch"
  ],
  "prettier.printWidth": 100
}
